<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constrain_redeem_points"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_top_green"
    android:padding="15dp">

    <ImageView
        android:id="@+id/img_pbp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pbp_default_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_pbp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_redeem_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".6"
            android:fontFamily="@font/roboto_medium"
            android:text="Redeem 640 Card Points"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_instant_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Get â‚¹ 320 instant discount"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_pbp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/checkbox_selector"
        android:button="@null"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/linear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linear" />

</androidx.constraintlayout.widget.ConstraintLayout>