<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/txt_save_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:alpha=".8"
        android:gravity="center"
        android:text="@string/securely_save_card"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/cb_saved_card"
        app:layout_constraintLeft_toRightOf="@+id/cb_saved_card"
        app:layout_constraintTop_toTopOf="@+id/cb_saved_card" />

    <TextView
        android:id="@+id/txt_save_card_not_supported"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha=".8"
        android:text="@string/securely_save_card_not_supported"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/txt_save_card"
        app:layout_constraintTop_toBottomOf="@+id/txt_save_card" />

    <CheckBox
        android:id="@+id/cb_saved_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/save_card_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>