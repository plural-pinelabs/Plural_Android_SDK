<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- Title and Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">
            <!-- Back Button -->
            <ImageButton
                android:id="@+id/upiBtnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/back_button"
                android:contentDescription="Back Button" />
            <!-- UPI Title Text -->
            <TextView
                android:id="@+id/tvUPITitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="UPI"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/robotoregular"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <!-- Divider with Text "Or get payment request on UPI ID" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D3D3D3" />
            <TextView
                android:id="@+id/or_get_paym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upi_payment_request"
                android:textAppearance="@style/or_get_paym"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D3D3D3" />
        </LinearLayout>
        <!-- UPI ID Input Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter UPI ID"
            android:textSize="14sp"
            android:fontFamily="@font/robotoregular"
            android:textColor="#8A8A8A"
            android:paddingTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_default_border"
            android:padding="12dp"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/etUPIId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter UPI ID"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:inputType="text" />

            <ImageView
                android:id="@+id/check_circle_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/check_circle"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btnVerifyContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/verify_continue"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:drawableStart="@drawable/lock_keyhole_minimalistic"
            android:drawablePadding="8dp"
            android:paddingLeft="81dp"
            android:paddingRight="81dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textAllCaps="false"
            android:enabled="false"
            android:background="@drawable/rounded_button_background" />

<!--        <FrameLayout-->
<!--            android:id="@+id/timer_container"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:visibility="gone" />-->


    </LinearLayout>
</ScrollView>
