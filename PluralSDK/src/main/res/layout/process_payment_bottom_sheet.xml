<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_footer"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img_process_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
         />
    <TextView
        android:id="@+id/txt_processing_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/processing_payment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_process_logo"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_processing_payment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/processing_payment_description"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:alpha=".7"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_processing_payment"
        app:layout_constraintRight_toRightOf="@id/txt_processing_payment"
        app:layout_constraintTop_toBottomOf="@+id/txt_processing_payment"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>